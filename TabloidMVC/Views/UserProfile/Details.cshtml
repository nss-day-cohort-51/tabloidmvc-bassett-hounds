@model TabloidMVC.Models.UserProfile

@{
    ViewData["Title"] = "Details";
}


<div>
    <h1>Details</h1>
    <hr />
    <div class=" row justify-content-between">
        <h3>@Model.FullName</h3>
    </div>
    @if ((String.IsNullOrEmpty(Model.ImageLocation)))
    {
        <img src="" alt="avatar" />
    }
    else
    {
        <img src="@Model.ImageLocation" alt="avatar" />
    }
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DisplayName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DisplayName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreateDateTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreateDateTime)
        </dd>
        @Html.DisplayNameFor(model => model.UserTypeId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserType.Name)
        </dd>

    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit") |
    <a asp-action="Index">Back to List</a>
</div>